            android:gravity="center"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/case31"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:background="@drawable/black"
            android:gravity="center"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/case32"
            android:layout_width="120dp"
